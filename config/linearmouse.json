{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.0",
  "schemes" : [
    {
      "if": {
        "device": {
          "category": "mouse"
        }
      },
      "buttons" : {
        "universalBackForward" : true
      },
      "pointer" : {
        "acceleration" : 0.25,
        "disableAcceleration" : true
      },
      "scrolling" : {
        "reverse" : {
          "vertical" : true
        },
        "acceleration" : {
          "vertical" : 1
        }
      }
    }
  ]
}