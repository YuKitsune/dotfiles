{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.1",
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "mouse"
        }
      },
      "buttons" : {
        "universalBackForward" : true
      },
      "pointer" : {
        "acceleration" : 0.5,
        "disableAcceleration" : true
      },
      "scrolling" : {
        "acceleration" : {
          "vertical" : 1
        },
        "reverse" : {
          "vertical" : true
        }
      }
    }
  ]
}